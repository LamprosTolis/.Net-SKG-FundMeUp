@model ProjectViewModel
@{
    ViewData["Title"] = "Create Project";
}

    <h2>New Project</h2> <br /> <br /> 


    <form class="needs-validation" novalidate>
        <div class="form-row">

            <div class="col-md-6 mb-3">
                <label for="Name">Project's Name</label>
                <input type="text" class="form-control" id="Name" value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label for="BudgetGoal">Budget Goal</label>
                <input type="text" class="form-control" id="BudgetGoal" value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="StatusUpdate">Status Update</label>
                <input type="text" class="form-control" id="StatusUpdate" required>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="Category">Category</label>
                <select class="custom-select" id="Category" required>
                    @foreach (var Category in Model.Categories)
                    {
                        <option value="@Category">@Category</option>
                    }
                </select>
                <div class="invalid-feedback">
                    Please select a valid state.
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="DoA">Date</label>
                <input type="date" class="form-control" id="DoA" required>
                <div class="invalid-feedback">
                    Please select a date.
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="Description">Description</label>
                @*<input type="text" class="form-control" id="StatusUpdate" required>*@
                <textarea rows="4" class="form-control" id="Description" cols="50" required></textarea>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                    Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>
        <button class="btn btn-primary" type="submit" >Create Project</button>
        
    </form>

<div id="responseDiv"></div>

<script src="~/js/createproject.js" ></script>

