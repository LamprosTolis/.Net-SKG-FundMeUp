@{
    ViewData["Title"] = "Home Page";
}

<style>
    .carousel-caption p {
        font-size: 20px;
        line-height: 1.4;
    }
    /* Carousel */
    /* Make .jpg files in the carousel display properly in older browsers */
    .carousel-inner .carousel-item img {
        width: 100%;
        height: 600px;
        min-height: 280px;
    }

    .fmu p {
        margin-top: 20px;
        font-size: large;
        color: #585858;
        padding: 3em;
    }
</style>


<div id="fmuCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <ul class="carousel-indicators">
        <li data-target="#fmuCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#fmuCarousel" data-slide-to="1"></li>
        <li data-target="#fmuCarousel" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/images/index3.jpg" alt="FundMeUp" />
            <div class="carousel-caption" role="option">
                <p>
                    FundMeUp
                    @*<a class="btn btn-primary" href="">
                        Learn More
                    </a>*@
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/index2.jpg" alt="FundMeUp" />
            <div class="carousel-caption" role="option">
                <p>
                    We gently guide you in every step.
                    @*<a class="btn btn-primary" href="">
                        Learn More
                    </a>*@
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/index1.jpg" alt="FundMeUp" />
            <div class="carousel-caption" role="option">
                <p>
                    Raise funds for your Startup.
                    @*<a class="btn btn-dark" href="">
                        Learn More
                    </a>*@
                </p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#fmuCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#fmuCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row text-center fmu">
    <p>
        <b>FundMeUp</b> is a reward-based crowdfunding platform, specially designed for small and medium-sized enterprises, startups, organizations and creative projects!
        Our goal is to highlight some of the most innovative and valuable projects that people want to be part of and are willing to support.
        So, do not leave your vision on the shelf, make it happen with <b>FundMeUp!</b>
    </p>
    <div class="col-md-4">
        <a asp-area="" asp-controller="Project" asp-action="AllProjects">
            <span class="fa-stack fa-5x">
                <i class="fas fa-circle fa-stack-2x text-dark"></i>
                <i class="fas fa-briefcase fa-stack-1x fa-inverse"></i>
            </span>
        </a>
        <h2>Projects</h2>
        <a href="/Project/AllProjects">Explore</a>
    </div>
    <div class="col-md-4">
        <a asp-area="" asp-controller="Project" asp-action="RecentProjects">
            <span class="fa-stack fa-5x">
                <i class="fas fa-circle fa-stack-2x text-dark"></i>
                <i class="fas fa-external-link-square-alt fa-stack-1x fa-inverse"></i>
            </span>
        </a>
        <h2>New Entries</h2>
        <a href="/Project/RecentProjects">Explore new Projects</a>

    </div>
    <div class="col-md-4">
        <a asp-area="" asp-controller="Project" asp-action="TrendingProjects">
            <span class="fa-stack fa-5x">
                <i class="fas fa-circle fa-stack-2x text-dark"></i>
                <i class="fas fa-chart-area fa-stack-1x fa-inverse"></i>
            </span>
        </a>
        <h2>Famous Projects</h2>
        <a href="/Project/TrendingProjects">Trending Campaigns</a>
    </div>
</div>
