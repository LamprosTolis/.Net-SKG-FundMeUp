@model FundMeUpMVC.Models.ProjectCreatorModel
@{
    ViewData["Title"] = "AllProjectCreators";
}
<h1 style="text-align:center; font-family:Georgia;">A list of All Project Creators'</h1>
<br />
<table id="resultTable" border="1" class="table table-sm" cellpadding="1" cellspacing="1">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Email</th>
        @*<th>Projects Created</th>*@
    </tr>
    @{ foreach (var projectCreator in Model.ProjectCreators)
        {
            <tr id="cusTable@(projectCreator.Id)">
                <td> @projectCreator.FirstName</td>
                <td> @projectCreator.LastName</td>
                <td> @projectCreator.Address</td>
                <td> @projectCreator.Email</td>
                @*<td> @projectCreator.Project.Count()</td>*@
                <td>
                    <a class='btn btn-warning' href='/ProjectCreator/ProjectCreatorPage/@projectCreator.Id'><span><i class='fa fa-edit'></i></span></a>
                </td>
            </tr>
        }
    }
</table>



<script src="~/js/all-projectCreators.js"></script>
