@{
    ViewData["Title"] = "AllofLists";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="site.css"></script>
<!-- Add jquery -->
<script type="text/javascript" src="jquery.min.js"></script>

<!-- Add fancyBox -->
<link rel="stylesheet" href="jquery.fancybox.css" type="text/css" media="screen" />
<script type="text/javascript" src="jquery.fancybox.pack.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h1 class="text-center text-success">Lists' Page</h1>
            <br />
            <br />

            <div class="btn-group" align="center" style="width:100%">
                <ul class="nav nav-pills" align="center">
                    <li class="" style="        width: 20%">
                        <a class="btn btn-lg btn-default" data-toggle="tab"
                           href="#projectMenu" id="Project"
                           onclick="">Projects</a>
                    </li>
                    <li class=" " style="width:20%">
                        <a class=" btn btn-lg btn-default" data-toggle="tab"
                           href="#backerMenu" id="Backer"
                           onclick="location.href = '/Backer/AllBackers'">Backers</a>
                    </li>
                    <li class=" " style="        width: 20%">
                        <a class=" btn btn-lg btn-default" data-toggle="tab"
                           href="#projectCreatorMenu" id="Creator"
                           onclick="location.href = '/ProjectCreator/AllProjectCreators'">Project Creators</a>
                    </li>
                </ul>
                <br />
                <br />
                <div class="tab-content">
                    <div id="projectMenu" class="tab-pane fade in active">

                        <h1 style="text-align:center; font-family:Georgia;">Projects</h1>
                        <br>

                        <table id="resultTable" border="1" class="table table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        Name
                                    </th>
                                    <th scope="col">
                                        Description
                                    </th>
                                    <th scope="col">
                                        Category
                                    </th>
                                    <th scope="col">
                                        BudgetGoal
                                    </th>
                                    <th scope="col">
                                        Balance
                                    </th>
                                    <th scope="col">
                                        StatusUpdate
                                    </th>
                                    <th scope="col">
                                        Available
                                    </th>
                                    <th scope="col">
                                        Funded
                                    </th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                        </table>

                    </div>

                    <div id="backerMenu" class="tab-pane fade">

                        <h1 style="text-align:center; font-family:Georgia;">Backers</h1>
                        <br>

                        <table id="resultTable" border="1" class="table table-sm" cellpadding="1" cellspacing="1">
                            <thead>
                                <tr>
                                    <th scope="col">Όνομα	</th>
                                    <th scope="col">Επώνυμο</th>
                                    <th scope="col">Ιδιότητα</th>
                                    <th scope="col">Διεύθυνση</th>
                                    <th scope="col">Email</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <div id="projectCreatorMenu" class="tab-pane fade">

                        <h1 style="text-align:center; font-family:Georgia;">Project Creators</h1>
                        <br>

                        <table id="resultTable" border="1" class="table table-sm" cellpadding="1" cellspacing="1">
                            <thead>
                                <tr>
                                    <th scope="col">Όνομα	</th>
                                    <th scope="col">Επώνυμο</th>
                                    <th scope="col">Διεύθυνση</th>
                                    <th scope="col">Email</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<script src="~/js/all-projectCreators.js"></script>
<script srv="~/js/all-backers.js"></script>
<script src="~/js/AllProjects.js"></script>



