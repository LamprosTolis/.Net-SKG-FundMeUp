
@model FundMeUpMVC.Models.CategoryOption;

@{
    ViewData["Title"] = "Category";
}

<h1 id="cat">@Model.Category</h1>


<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">BudgetGoal</th>
            <th scope="col">StatusUpdate</th>
            
        </tr>
    </thead>
    <tbody>
        @{
          
            foreach (var project in Model.Projects)
            {
                <tr id="@project.Id" onclick="window.open('/Project/Project/'+this.id,'_self')" style="cursor:pointer;">
                    <td> @project.Name</td>
                    <td> @project.BudgetGoal </td>
                    <td> @project.StatusUpdate</td>
                 
                </tr>
             };
        }
     </tbody>
</table>




<div id="test"></div>


