@model FundMeUpMVC.Models.RewardsByProject;
@{
    ViewData["Title"] = "Project";
}


<style>
    #head {
        font-weight: bold;
        margin-bottom: unset;
    }

    #hd {
        margin: 2em;
    }

    /*#img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }*/
    .dh-card {
        border: 2px solid #cbcbcb;
        color: #a8a1a1;
        background-color: #2f2f2f;
        padding: 2em;
        margin-top: 50px;
    }

    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }

    h4 {
        font-weight: bold;
        color: #a28b16;
        margin-left: 40px;
        margin-top: 90px;
    }

    h1 {
        color: #2f2f2f;
        text-align: center;
    }
</style>

<div id="content">
    <h1 id="Name" value=""></h1>

    <div class="row" style="margin-top:20px">
        <div class="col-md-4">
            <div id="card">
                <div class="card-body">
                    <img id="MyImage" width="550" height="550" class="card-img-top" style="" />
                </div>
            </div>

            <div class="card dh-card">
                <div class="card-heading">
                    <h3>Project Summary</h3>
                    <b>Fantastic Job!</b><br />
                    Guests love what you're doing.<br />
                    Keep up the good work.
                </div>
                <div class="card-body">
                    <div class="text-info"><h5 id="Name"></h5></div>
                    <div class="text-info"><h5 id="details"></h5></div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div id="hd">
                <h5 id="head">Description</h5>
                <hr>
                <p id="Description" value=""></p>
            </div>
            <div id="hd">
                <h5 id="head" class="Date">Status Update</h5>
                <hr>
                <p id="StatusUpdate" value=""></p>
            </div>

            <h4>Reward Packages</h4>
            <div class="card-deck" style="margin-left:10px">
                @{ foreach (var reward in Model.Rewards)
                    {
                        <div class="col-md-6" style="margin-top:20px">
                            <div class="card bg-light" style="background-color: rgba(253, 253, 253, 0.6)">
                                <div class="card-body">
                                    <h5 class="card-title">@reward.Name</h5>
                                    <h5 class="card-title">@reward.Price$</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">Reward</h6>
                                    <p class="card-text">@reward.Description</p>
                                    <button type="button" class="btn btn-primary" onclick=" if (localStorage.key(0) == 'backerId') { location.href = '/BackerProject/RewardPackageFund/@reward.Id/' + localStorage.getItem('backerId') }">Fund Me Up</button>
                                </div>
                            </div>
                        </div>
                    } }
            </div>
        </div>
    </div>
</div>


<script src="~/js/Project.js"></script>


